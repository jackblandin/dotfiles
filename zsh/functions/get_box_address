# vi: ft=zsh

function get_box_address() {
  svc=$1
  env=$2

  user="jack"
  addr=

  declare -A stg_addresses
  stg_addresses[fs]="bck01.stg.aws1.trunkclub.systems"
  stg_addresses[ia]="mrc01.stg.aws1.trunkclub.systems"
  stg_addresses[ms]="mbr01.stg.aws1.trunkclub.systems"
  stg_addresses[sa]="sls01.stg.aws1.trunkclub.systems"

  declare -A prd_addresses
  prd_addresses[fs]="bck01.prd.aws1.trunkclub.systems"
  prd_addresses[ia]="mrc03.prd.aws1.trunkclub.systems"
  prd_addresses[ms]="mbr01.prd.aws1.trunkclub.systems"
  prd_addresses[sa]="sls01.prd.aws1.trunkclub.systems"


  if [ $env = "prd" ]; then
    echo $prd_addresses[$svc]
  elif [ $env = "stg" ]; then
    echo $stg_addresses[$svc]
  fi
}
